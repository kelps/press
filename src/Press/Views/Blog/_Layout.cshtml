<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body class="@ViewData["page-class"]">
    <header>
        <h1><a href="~/">@ViewData["Title"]</a></h1>
        <ul>
            <li><a href="#" target="_blank" title="RSS" class="rss">RSS</a></li>
        </ul>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - <a href="http://github.com/kelps/press/" target="_blank">blog by Press</a>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
