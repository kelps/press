<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style type="text/css">
        * {
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }

        html {
            font-family: "Segoe UI";
            color: #555;
            min-height: 100vh;
        }

        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            -ms-flex-direction: column;
            -webkit-flex-direction: column;
            flex-direction: column;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        h1, h2, h3, h4, h5, h6 {
            margin: 0;
        }

        header, footer {
            background: #ccc;
            padding: .5rem;
        }

        header {
            position: relative;
            text-align: center;
        }

        footer {
            text-align: right;
        }

        body > header ul {
            position: absolute;
            top: .5em;
            right: .5em;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        body > header a {
            text-decoration: none;
        }

        main {
            max-width: 60em;
            margin: 1em auto;
            flex: 1 1 auto;
        }

        img {
            max-width: 100%;
        }

        a.tag + a.tag:before {
            content: ", ";
            text-decoration: none;
        }
    </style>
</head>
<body class="@ViewData["page-class"]">
    <header>
        <h1><a href="~/">@ViewData["Title"]</a></h1>
        <ul>
            <li><a href="#" target="_blank" title="RSS" class="rss">RSS</a></li>
        </ul>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - <a href="http://github.com/kelps/press/" target="_blank">blog by Press</a>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
